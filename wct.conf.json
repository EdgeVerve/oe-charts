{
  "verbose": false,
  "plugins": {
    "local": {
      "browsers": ["chrome", "firefox"]
    },
    "sauce": {
      "disabled": true
    },
    "istanbul": {
      "dir": "./coverage",
      "reporters": ["text-summary", "lcov"],
      "include": [
                "/**/*.js",
                "/**/*.html"
            ],
      "exclude": [
                "/bower_components/**/*.html",
                "/bower_components/**/*.js",
                "/coverage/**/*.html",
                "/coverage/**/*.js",
                "/node_modules/**/*.html",
                "/node_modules/**/*.js",
                "/test/**/*.html",
                "/test/**/*.js",
                "/scripts/*.js"
            ]
    }

  }
}
